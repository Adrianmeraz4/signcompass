<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>ASL Quiz</title>
  <style>
    /* General Styles */
    body, html {
      height: 100%;
      margin: 0;
      font-family: Arial, sans-serif;
      background-color: #f7f7f7;
      color: #333;
    }

    /* Quiz Container */
    .quiz-container {
      max-width: 800px;
      margin: 50px auto;
      padding: 20px;
      background-color: #fff;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h1 {
      text-align: center;
      color: #5a5a5a;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    h1 img {
      width: 50px; /* Adjust as per your logo's dimensions */
      margin-right: 10px;
    }


    /* Question Styles */
    .question {
      margin-bottom: 20px;
    }

    .question h2 {
      margin: 0;
      font-size: 24px;
      color: #333;
    }

    /* Options Style */
    .options label, .question label {
      display: block;
      margin: 10px 0;
      padding: 10px;
      background-color: #e9e9e9;
      border-radius: 5px;
      cursor: pointer;
    }

    .options label:hover, .question label:hover {
      background-color: #d3d3d3;
    }

    /* Submit Button Style */
    .submit-container {
      text-align: center;
      margin-top: 20px;
    }

    #submitBtn {
      padding: 10px 20px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      font-size: 16px;
      background-color: #4CAF50;
      color: #ffffff;
      transition: background-color 0.3s;
    }

    #submitBtn:hover {
      background-color: #45a049;
    }


    /* Score Box Styles */
    .score-box {
      padding: 20px;
      border-radius: 10px;
      margin: 20px 0;
      font-size: 18px;
      text-align: center;
    }

    .green-box {
      background-color: #e7f5e7;
      color: #155724;
      border: 1px solid #c3e6cb;
    }

    .yellow-box {
      background-color: #fff3cd;
      color: #856404;
      border: 1px solid #ffeeba;
    }

    .red-box {
      background-color: #f8d7da;
      color: #721c24;
      border: 1px solid #f5c6cb;
    }
    .review-box {
      padding: 15px;
      border-radius: 10px;
      margin: 10px 0;
      text-align: center;
      background-color: #f0f0f0;
      border: 1px solid #ddd;
    }

    .review-box a {
      color: #007bff;
      text-decoration: none;
      font-weight: bold;
    }

    .review-box a:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <div class="quiz-container">
    <h1><img src="logo.png" alt="Logo">Lesson 1: American Sign Language Quiz</h1>
    <form id="aslQuizForm">
      <!-- Question 1 -->
      <div class="question">
        <p>1. What are the 2 kinds of signs?</p>
        <label><input type="radio" name="q1" value="a"> a. Static and Dynamic</label>
        <label><input type="radio" name="q1" value="b"> b. Static and Kinetic</label>
        <label><input type="radio" name="q1" value="c"> c. Dynamic and Still</label>
        <label><input type="radio" name="q1" value="d"> d. Mobile and Static</label>
      </div>

      <!-- Question 2 -->
      <div class="question">
        <p>2. What is Important for making signs?</p>
        <label><input type="radio" name="q2" value="a"> a. Wrist orientation</label>
        <label><input type="radio" name="q2" value="b"> b. Fast movements</label>
        <label><input type="radio" name="q2" value="c"> c. Finger position</label>
        <label><input type="radio" name="q2" value="d"> d. a & c</label>
      </div>

      <!-- Question 3 -->
      <div class="question">
        <p>3. What is the 4th finger identity?</p>
        <label><input type="radio" name="q3" value="a"> a. Pointer</label>
        <label><input type="radio" name="q3" value="b"> b. Ring</label>
        <label><input type="radio" name="q3" value="c"> c. Thumb</label>
        <label><input type="radio" name="q3" value="d"> d. Middle</label>
      </div>

      <!-- Question 4 -->
      <div class="question">
        <p>4. What is the 3rd finger?</p>
        <label><input type="radio" name="q4" value="a"> a. Middle</label>
        <label><input type="radio" name="q4" value="b"> b. Pointer</label>
        <label><input type="radio" name="q4" value="c"> c. Pinkie</label>
        <label><input type="radio" name="q4" value="d"> d. Thumb</label>
      </div>

      <!-- Question 5 -->
      <div class="question">
        <p>5. What is the least used finger in ASL?</p>
        <label><input type="radio" name="q5" value="a"> a. Thumb</label>
        <label><input type="radio" name="q5" value="b"> b. Pointer</label>
        <label><input type="radio" name="q5" value="c"> c. Pinkie</label>
        <label><input type="radio" name="q5" value="d"> d. Middle</label>
      </div>

      <!-- Question 6 -->
      <div class="question">
        <p>6. What part of the body do you use to sign?</p>
        <label><input type="radio" name="q6" value="a"> a. Hands only</label>
        <label><input type="radio" name="q6" value="b"> b. Face only</label>
        <label><input type="radio" name="q6" value="c"> c. Hands and face</label>
        <label><input type="radio" name="q6" value="d"> d. Entire body</label>
      </div>

      <div class="submit-container">
        <button type="button" id="submitBtn">Submit Quiz</button>
      </div>
    </form>
    <div class="results-container" id="resultsContainer"></div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const form = document.getElementById('aslQuizForm');
      const submitBtn = document.getElementById('submitBtn');
      const resultsContainer = document.getElementById('resultsContainer');
      const correctAnswers = ['a', 'd', 'b', 'a', 'c', 'c']; // Replace with correct answers

      submitBtn.onclick = function() {
        const allAnswered = [...form.querySelectorAll('.question')].every(question => 
          question.querySelector('input[type="radio"]:checked')
        );
        if (!allAnswered) {
          alert('Please answer all questions before submitting the quiz.');
          return;
        }

        let score = 0;
        const userAnswers = [...form.querySelectorAll('input[type="radio"]:checked')];
        
        userAnswers.forEach((input, index) => {
          if (input.value === correctAnswers[index]) {
            score++;
          }
        });

        const totalQuestions = correctAnswers.length;
        const scorePercentage = (score / totalQuestions) * 100;
        let scoreBoxClass = '';

        if (scorePercentage >= 90) {
          scoreBoxClass = 'green-box';
        } else if (scorePercentage >= 80) {
          scoreBoxClass = 'yellow-box';
        } else {
          scoreBoxClass = 'red-box';
        }

        resultsContainer.innerHTML = `
          <div class="score-box ${scoreBoxClass}">
            You scored ${score} out of ${totalQuestions} (${scorePercentage.toFixed(2)}%).
          </div>
        `;

        if (scorePercentage < 90) {
          resultsContainer.innerHTML += `
            <div class="review-box">
              <a href="lesson1.html">Review Lesson 1</a>
            </div>
          `;
        }
      };
    });
  </script>
</body>
</html>

