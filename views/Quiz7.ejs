<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ASL Quiz - Lesson 6</title>
    <style>
        body,
        html {
            height: 100%;
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #f7f7f7;
            color: #333;
        }

        .quiz-container {
            max-width: 800px;
            margin: 50px auto;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .question {
            margin-bottom: 20px;
        }

        .question h2 {
            margin: 0;
            font-size: 24px;
            color: #333;
        }

        .options label,
        .question label {
            display: block;
            margin: 10px 0;
            padding: 10px;
            background-color: #e9e9e9;
            border-radius: 5px;
            cursor: pointer;
        }

        .options label:hover,
        .question label:hover {
            background-color: #d3d3d3;
        }

        .submit-container {
            text-align: center;
            margin-top: 20px;
        }

        #submitBtn {
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            background-color: #4CAF50;
            color: #ffffff;
            transition: background-color 0.3s;
        }

        #submitBtn:hover {
            background-color: #45a049;
        }

        .score-box {
            padding: 20px;
            border-radius: 10px;
            margin: 20px 0;
            font-size: 18px;
            text-align: center;
            transition: background-color 0.3s, color 0.3s;
        }

        .green-box {
            background-color: #d4edda;
            color: #155724;
        }

        .red-box {
            background-color: #f8d7da;
            color: #721c24;
        }

        .review-box {
            padding: 15px;
            border-radius: 10px;
            margin: 10px 0;
            text-align: center;
            background-color: #f0f0f0;
            border: 1px solid #ddd;
        }

        .hidden {
            display: none;
        }

        .review-box a {
            color: #007bff;
            text-decoration: none;
            font-weight: bold;
        }

        .review-box a:hover {
            text-decoration: underline;
        }

        .correct {
            background-color: #d4edda;
            color: #155724;
        }

        .incorrect {
            background-color: #f8d7da;
            color: #721c24;
        }

        .result-comment {
            display: inline-block;
            margin-left: 20px;
            font-weight: bold;
        }

        .result-comment.correct {
            color: #155724;
        }

        .result-comment.incorrect {
            color: #721c24;
        }
    </style>
</head>

<body>
    <div class="quiz-container">
        <h1><img src="\images\Logo.png" alt="Logo"> Lesson 6: American Sign Language Quiz</h1>
        <form id="aslQuizForm">

            <!-- Question 1 -->
            <div class="question">
                <p>1. Which sign from this lesson has all fingers outward?</p>
                <label><input type="radio" name="q1" value="a"> a. 1</label>
                <label><input type="radio" name="q1" value="b"> b. 8</label>
                <label><input type="radio" name="q1" value="c"> c. 10</label>
                <label><input type="radio" name="q1" value="d"> d. 5</label>
            </div>

            <!-- Question 2 -->
            <div class="question">
                <p>2. Which sign from this lesson has fingers 1, 3, 4, and 5 closed?</p>
                <label><input type="radio" name="q2" value="a"> a. 2</label>
                <label><input type="radio" name="q2" value="b"> b. 1</label>
                <label><input type="radio" name="q2" value="c"> c. 5</label>
                <label><input type="radio" name="q2" value="d"> d. 7</label>
            </div>

            <!-- Question 3 -->
            <div class="question">
                <p>3. Which sign from this lesson is dynamic?</p>
                <label><input type="radio" name="q3" value="a"> a. 1</label>
                <label><input type="radio" name="q3" value="b"> b. 4</label>
                <label><input type="radio" name="q3" value="c"> c. 7</label>
                <label><input type="radio" name="q3" value="d"> d. 10</label>
            </div>

            <!-- Question 4 -->
            <div class="question">
                <p>4. What is this sign?</p>
                <img src="\images\number9.jpg" alt="letter 9" width="200" height="200">
                <label><input type="radio" name="q4" value="a"> a. 9</label>
                <label><input type="radio" name="q4" value="b"> b. 2</label>
                <label><input type="radio" name="q4" value="c"> c. 5</label>
                <label><input type="radio" name="q4" value="d"> d. 7</label>
            </div>

            <!-- Question 5 -->
            <div class="question">
                <p>5. What is this sign?</p>
                <img src="\images\number1.jpg" alt="letter 1" width="150" height="250">
                <label><input type="radio" name="q5" value="a"> a. 2</label>
                <label><input type="radio" name="q5" value="b"> b. 1</label>
                <label><input type="radio" name="q5" value="c"> c. 8</label>
                <label><input type="radio" name="q5" value="d"> d. 6</label>
            </div>

            <!-- Question 6 -->
            <div class="question">
                <p>6. What is this sign?</p>
                <img src="\images\number5.jpg" alt="letter 5" width="225" height="175">
                <label><input type="radio" name="q6" value="a"> a. 2</label>
                <label><input type="radio" name="q6" value="b"> b. 7</label>
                <label><input type="radio" name="q6" value="c"> c. 9</label>
                <label><input type="radio" name="q6" value="d"> d. 5</label>
            </div>

            <!-- Question 7 -->
            <div class="question">
                <p>7. What is this sign?</p>
                <img src="\images\number2.jpg" alt="letter 2" width="175" height="225">
                <label><input type="radio" name="q7" value="a"> a. 1</label>
                <label><input type="radio" name="q7" value="b"> b. 5</label>
                <label><input type="radio" name="q7" value="c"> c. 2</label>
                <label><input type="radio" name="q7" value="d"> d. 10</label>
            </div>

            <!-- Question 8 -->
            <div class="question">
                <p>8. What is this sign?</p>
                <img src="\images\number6.jpg" alt="letter 6" width="150" height="250">
                <label><input type="radio" name="q8" value="a"> a. 9</label>
                <label><input type="radio" name="q8" value="b"> b. 6</label>
                <label><input type="radio" name="q8" value="c"> c. 7</label>
                <label><input type="radio" name="q8" value="d"> d. 8</label>
            </div>

            <!-- Question 9 -->
            <div class="question">
                <p>9. What is this sign?</p>
                <img src="\images\number4.jpg" alt="letter 4" width="200" height="200">
                <label><input type="radio" name="q9" value="a"> a. 2</label>
                <label><input type="radio" name="q9" value="b"> b. 7</label>
                <label><input type="radio" name="q9" value="c"> c. 5</label>
                <label><input type="radio" name="q9" value="d"> d. 4</label>
            </div>




        </form>
        <div class="submit-container">
            <button type="button" id="submitBtn">Submit Quiz</button>
        </div>
        <div id="scoreContainer" class="score-box hidden"></div>
        <div id="reviewContainer" class="review-box hidden"></div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const form = document.getElementById('aslQuizForm');
            const submitBtn = document.getElementById('submitBtn');
            const scoreContainer = document.getElementById('scoreContainer');
            const reviewContainer = document.getElementById('reviewContainer');
            const correctAnswers = {
                'q1': 'c', 'q2': 'b', 'q3': 'a', 'q4': 'b', 'q5': 'b',
                'q6': 'a', 'q7': 'b', 'q8': 'b', 'q9': 'c'
                // Continue with correct answers for each question
            };

            submitBtn.addEventListener('click', function () {
                let score = 0;
                let allAnswered = true;
                Object.keys(correctAnswers).forEach(question => {
                    const radios = form[question];
                    let answered = false;
                    radios.forEach(radio => {
                        if (radio.checked) {
                            answered = true;
                            if (radio.value === correctAnswers[question]) {
                                score++;
                                radio.parentElement.classList.add('correct');
                            } else {
                                radio.parentElement.classList.add('incorrect');
                            }
                        }
                    });
                    if (!answered) {
                        allAnswered = false;
                    }
                });

                if (!allAnswered) {
                    alert('Please answer all questions before submitting.');
                    return;
                }

                const totalQuestions = Object.keys(correctAnswers).length;
                const scorePercentage = (score / totalQuestions) * 100;
                scoreContainer.textContent = `You scored ${score} out of ${totalQuestions} (${scorePercentage.toFixed(2)}%).`;
                scoreContainer.classList.remove('hidden');

                if (scorePercentage >= 90) {
                    scoreContainer.classList.add('green-box');
                } else {
                    scoreContainer.classList.add('red-box');
                    reviewContainer.classList.remove('hidden');
                    reviewContainer.innerHTML = '<a href="/lesson6/review">Review Lesson 6</a>';
                }
            });
        });
    </script>
</body>

</html>